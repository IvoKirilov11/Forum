@model Forum.Web.ViewModels.Categories.CategoryViewModel
@{
    this.ViewData["Title"] = Model.Title;
}

<h1 class="display-3">@Model.Title</h1>
<div class="alert alert-info">
    @Model.Description
</div>

@foreach (var post in Model.Posts)
{
   <div class="media-body">
    		<h4 class="media-heading">@post.Title</h4>
              <ul class="list-inline list-unstyled text-right">
  			<li class= "list-inline-item"><i class="fa-solid fa-user-pen"></i> By @post.UserUserName </li>
            <li class= "list-inline-item"><i class="fa-solid fa-calendar-days"></i> @post.CreateOn </li>
            <li class= "list-inline-item"><i class="fa-solid fa-comment-dots"></i> @post.CommentsCount</li>
			</ul>
          
          
   </div>
}        